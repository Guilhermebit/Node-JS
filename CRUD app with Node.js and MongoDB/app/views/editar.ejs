<!DOCTYPE HTML>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">

    <title>CRUD em Node-JS e MongoDB</title>
    
    <!-- JQuery -->
    <script src="js/jquery-2.2.1.js"></script>

    <!-- bootstrap - link cdn -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  
    <!-- incluindo css -->
    <link href="css/style.css" rel="stylesheet">

    <!-- favicon -->
    <link rel="shortcut icon" href="images/favicon.ico" />
  </head>

  <body>

     <div class="container">

      <div class="row">
        
       <div class="col-md-12">

        <h2>Editar Usuário:</h2>

  <% usuarios.forEach(function(detalhes) { %>
   <form action="/editar/salvar_edicao/<%= detalhes._id%>" method="post">
       
    <div class="form-group">
       <label for="nome">Nome:</label>
       <input type="text" class="form-control" value="<%= detalhes.nome %>" name="nome">
    </div>
    <div class="form-group">
       <label>Sobrenome:</label>
       <input type="text" class="form-control" value="<%= detalhes.sobrenome %>" name="sobrenome">
    </div>

       <br><br>
       <button><a href="/listagem">Listar Usuarios</a></button>
       <button type="submit">Salvar Edição</button>
   </form>
  
    <% }) %>

    </div>

    </div>
     </div>

  
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  
  </body>
</html>